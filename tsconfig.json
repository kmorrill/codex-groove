{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "rootDir": "./",
    "types": ["node"]
  },
  "include": [
    "cli/src/**/*",
    "cli/commands/**/*",
    "dsl/**/*",
    "ui/src/**/*",
    "songs/**/*",
    "types/**/*"
  ],
  "exclude": ["dist", "node_modules"]
}
